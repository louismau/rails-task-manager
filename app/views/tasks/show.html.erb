<h1><%= @task.title %></h1>
<%= link_to 'Edit this task', edit_path %>
<p><%= @task.details %></p>
<% if @task.completed %>
<div>
    <input type="checkbox" id="completed" checked disabled>
    <label for="completed">This task is completed</label>
</div>
<% else %>
<div>
    <input type="checkbox" id="not-completed" disabled>
    <label for="not-completed">This task is not completed yet</label>
</div>
<% end %>
<%= link_to 'Back to list', index_path %>